<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main_menu"
    android:focusable="auto"
    tools:context=".SecondActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/goToTestingButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/font_main_layout"
            android:text="Testing"
            android:textColor="@color/text_main_menu"
            android:layout_marginTop="240dp"
            android:textSize="18sp"
            app:cornerRadius="15dip" />

        <Button
            android:id="@+id/goToWordListButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/font_main_layout"

            android:text="Word list"
            android:textColor="@color/text_main_menu"
            android:textSize="18sp"
            app:cornerRadius="15dip" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>